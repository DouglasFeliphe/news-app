{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
      // "@screens/*": ["screens/*"],
      // "@components/*": ["components/*"],
      // "@services/*": ["services/*"]
      // "@features/*": ["features/*"],
      // "@global/*": ["global/*"],
      // "@assets/*": ["assets/*"],
      // "@theme/*": ["theme/*"]
    },

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
